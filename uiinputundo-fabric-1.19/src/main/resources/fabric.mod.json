{
	"schemaVersion": 1,
	"id": "uiinputundo",
	"version": "${version}",

	"name": "UI Input Undo",
	"description": "A client-side Minecraft mod that allows you to undo and redo text in UI input fields.",
	"authors": ["TheCSDev"],
	"contact":
	{
		"homepage": "https://github.com/TheCSDev",
		"sources": "https://github.com/TheCSDev/mc-ui-input-undo",
		"issues": "https://github.com/TheCSDev/mc-ui-input-undo/issues"
	},

	"license": "LGPL-3.0-or-later",
	"icon": "assets/uiinputundo/icon.png",

	"environment": "*",
	"entrypoints":
	{
		"client": ["thecsdev.uiinputundo.client.UIInputUndoClient"]
	},
	"mixins": ["uiinputundo.mixins.json"],

	"depends":
	{
		"fabricloader": ">=0.14.6",
		"fabric": "*",
		"minecraft": "1.19.x",
		"java": ">=17"
	},
	"suggests":
	{
		"another-mod": "*"
	}
}
